<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00E5FF"
    tools:context="com.udacity.myapplication.MainActivity">

    <ImageView
        android:id="@+id/udacity_board"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:src="@drawable/udacity" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:text="Imagine your future!"
        android:fontFamily="sans-serif"
        android:textSize="35sp"
        android:id="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/address1"
        android:layout_toRightOf="@+id/address1"
        android:fontFamily="sans-serif"
        android:text="www.udacity.com"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/udacity_wordmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:layout_marginLeft="20sp"
        android:fontFamily="sans-serif-smallcaps"
        android:textStyle="bold"
        android:text="Udacity"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/address1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:text="2465 Latham St"
        android:layout_marginLeft="20sp" />

    <TextView
        android:id="@+id/uaddress2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30sp"
        android:layout_marginLeft="20sp"
        android:text="Mountain View, CA 94043" />

    <TextView
        android:id="@+id/address3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10sp"
        android:text="650-555-5555"
        android:layout_marginLeft="20sp" />

</RelativeLayout>
